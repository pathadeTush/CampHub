<% layout('layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
      <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" name="campground[title]" id="title" required />
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" required />
        </div>
  
        <!-- <input type="file" name="image" multiple> -->
        <!-- <div class="mb-3">
          <label class="form-label" for="image">Image Url</label>
          <input class="form-control" type="file" name="image" id="image" required />
        </div> -->
        <!-- <div class="mb-3">
          <label class="form-label" for="image">Image Url</label>
          <input class="form-control" type="text" name="campground[image]" id="image" required />
        </div> -->
        <div class="mb-3">
          <label for="form-label" for="price-label">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="number" class="form-control" id="price-label" placeholder="0.00" aria-label="price"
              aria-describedby="basic-addon1" name="campground[price]" required />
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" name="campground[description]" id="description" required></textarea>
        </div>
        <div class="mb-3">
          <label for="images">Add Images</label>
          <div class="input-group" name="images">
            <input type="file" class="form-control" id="images" name="image" multiple>
            <label class="input-group-text" for="images">Upload</label>
          </div>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Add Campground</button>
        </div>

        <!-- <div class="">
        <a href="/campgrounds">all campgrounds</a>
      </div> -->
      </form>
    </div>
  </div>

 